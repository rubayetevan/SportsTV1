<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tvplayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_bottom_bg_2"
    tools:context="com.errorstation.sportstv.TVPlayerActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <include
                layout="@layout/giraffe_player"
                android:layout_width="match_parent"
                android:layout_height="210dp"/>
            <TextView
                android:id="@+id/liveTV"
                android:focusableInTouchMode="true"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:text="@string/live"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/teamsTV"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="বাংলাদেশ বনাম কানাডা"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/matchTV"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"

                android:text="১ম খেলা, ওডিআই"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/placeTV"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:text="Canada national Stadium"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.CardView
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.gms.ads.NativeExpressAdView
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/adViewF4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    ads:adSize="300x255"
                    ads:adUnitId="ca-app-pub-4958954259926855/5797640928"></com.google.android.gms.ads.NativeExpressAdView>
            </android.support.v7.widget.CardView>





        </LinearLayout>

    </ScrollView>


</LinearLayout>
