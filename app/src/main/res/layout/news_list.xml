<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="7.55dp"
    android:paddingTop="7.5dp"
    android:layout_height="wrap_content">
  <android.support.v7.widget.CardView

      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <FrameLayout
        android:transitionName="@string/newsTrans"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/newsListCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <ImageView
          android:scaleType="centerCrop"
          android:id="@+id/newsListIMGV"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          />
      <TextView
          android:textStyle="bold"
          android:textColor="#12887a"
          android:id="@+id/headingTV"
          android:layout_marginTop="10dp"
          android:layout_marginRight="15dp"
          android:layout_marginLeft="15dp"
          android:text="@string/sampleHeading"
          android:textSize="16sp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
      <TextView
          android:textColor="#546e7a"
          android:id="@+id/sourceTV"
          android:textSize="12sp"
          android:text="@string/samplesource"
          android:layout_marginRight="15dp"
          android:layout_marginLeft="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
      <TextView
          android:textColor="#212121"
          android:id="@+id/smallDesTV"
          android:textSize="12sp"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="10dp"
          android:text="@string/sampleDes1"
          android:layout_marginRight="15dp"
          android:layout_marginLeft="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
    </LinearLayout>

    </FrameLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>