<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
      <android.support.v7.widget.CardView
          android:focusableInTouchMode="true"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_margin="15dp"
          >
        <FrameLayout
            android:id="@+id/msgFL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_home_message_red"
            android:orientation="vertical"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="?attr/selectableItemBackground"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical"
              >
            <TextView

                android:id="@+id/msgTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/noLive"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
          </LinearLayout>
        </FrameLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:id="@+id/scoreCRDV"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:background="?attr/selectableItemBackground"
          >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_home_live_score"
            android:orientation="vertical"
            >
          <LinearLayout

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/selectableItemBackground"
              android:clickable="true"
              android:orientation="horizontal"
              >
            <ImageView
                android:id="@+id/team1IMGV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="8dp"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
                >
              <TextView
                  android:id="@+id/team1TV"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="@string/teamName"
                  android:textColor="#212121"
                  />
              <TextView
                  android:textSize="16sp"
                  android:textColor="#ff1744"
                  android:id="@+id/score1TV"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:gravity="center"
                  android:text="@string/teamScore"
                  />
              <TextView
                  android:textColor="#128779"
                  android:id="@+id/over1TV"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:gravity="center"
                  android:text="@string/teamOver"
                  />

            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:padding="3dp"
                android:id="@+id/vsTV"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="@string/vrs"
                android:textColor="#ffffff"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
                >
              <TextView
                  android:id="@+id/team2TV"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="@string/teamName"
                  android:textColor="#212121"
                  />
              <TextView
                  android:textSize="16sp"
                  android:textColor="#ff1744"
                  android:id="@+id/score2TV"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:gravity="center"
                  android:text="@string/teamScore"
                  />
              <TextView
                  android:textColor="#128779"
                  android:id="@+id/over2TV"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:gravity="center"
                  android:text="@string/teamOver"
                  />
            </LinearLayout>
            <ImageView
                android:id="@+id/team2IMGV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"

                />
          </LinearLayout>
        </FrameLayout>
      </android.support.v7.widget.CardView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            >
          <FrameLayout

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ic_home_channel_bg"
              android:orientation="vertical"
              >
            <LinearLayout
                android:id="@+id/channel1LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                >
              <TextView

                  android:id="@+id/live1TV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:layout_marginTop="5dp"
                  android:layout_marginRight="5dp"
                  android:background="@drawable/ic_live"
                  android:gravity="center"
                  android:paddingLeft="3dp"
                  android:paddingRight="3dp"
                  android:paddingTop="3dp"
                  android:text="@string/live"
                  android:textColor="#ffffff"
                  android:textSize="12sp"
                  />
              <ImageView
                  android:padding="5dp"
                  android:id="@+id/chLogo1IMGV"
                  android:scaleType="fitXY"
                  android:layout_width="60dp"
                  android:layout_height="60dp"
                  android:layout_gravity="center"

                  />
              <TextView
                  android:id="@+id/channel1TV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="@string/channel1"
                  android:textColor="#ffffff"
                  android:textSize="16sp"
                  />

            </LinearLayout>

          </FrameLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            >
          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ic_home_channel_bg"
              android:orientation="vertical"
              >
            <LinearLayout
                android:id="@+id/channel2LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                >
              <TextView
                  android:paddingTop="3dp"
                  android:id="@+id/live2TV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:layout_marginTop="5dp"
                  android:layout_marginRight="5dp"
                  android:background="@drawable/ic_live"
                  android:gravity="center"
                  android:paddingLeft="3dp"
                  android:paddingRight="3dp"
                  android:text="@string/live"
                  android:textColor="#ffffff"
                  android:textSize="12sp"
                  />
              <ImageView
                  android:padding="5dp"
                  android:id="@+id/chLogo2IMGV"
                  android:scaleType="fitXY"
                  android:layout_width="60dp"
                  android:layout_height="60dp"
                  android:layout_gravity="center"

                  />
              <TextView
                  android:id="@+id/channel2TV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="@string/channel2"
                  android:textColor="#ffffff"
                  android:textSize="16sp"
                  />

            </LinearLayout>

          </FrameLayout>
        </android.support.v7.widget.CardView>


      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal"
          android:visibility="gone"
          >
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            >
          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ic_home_channel_bg"
              android:orientation="vertical"
              >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                >

            </LinearLayout>

          </FrameLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            >
          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ic_home_channel_bg"
              android:orientation="vertical"
              >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                >

            </LinearLayout>
          </FrameLayout>
        </android.support.v7.widget.CardView>


      </LinearLayout>
      <android.support.v7.widget.CardView
          android:layout_margin="15dp"
          android:layout_gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <com.google.android.gms.ads.NativeExpressAdView
            android:id="@+id/adViewF3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="300x255"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            ads:adUnitId="ca-app-pub-4958954259926855/4181306928"></com.google.android.gms.ads.NativeExpressAdView>

      </android.support.v7.widget.CardView>

    </LinearLayout>


  </ScrollView>


</android.support.design.widget.CoordinatorLayout>